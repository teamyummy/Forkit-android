<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yummyteam.fastcampus.forkit.main.EateryListFragment">

    <SearchView
        android:id="@+id/sv_serch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_serch"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/filter_map_layout">

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/xml_border"
            android:gravity="center"
            android:padding="5dp"
            android:text="Filter" />

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_border"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:text="Map" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_banner"
        android:layout_alignParentStart="true"
        android:id="@+id/restaurant_list" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:id="@+id/iv_banner"
        android:layout_below="@+id/filter_map_layout"
        android:layout_alignParentStart="true">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            app:srcCompat="@mipmap/ic_launcher" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오리농원\n맛이 좋지 않지만\n점심에 싸요"/>
    </LinearLayout>

</RelativeLayout>
