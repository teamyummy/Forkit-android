<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="7dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/tv_myReview_create_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_myReview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton

                android:id="@+id/ib_myReviw_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp"
                android:background="@color/cardview_light_background"
                app:srcCompat="@mipmap/ic_edit_delete" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/multiple_image_select_divider"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/tv_myReview_restaurants_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜…" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_myReview_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_egmt_review_rating_2_pressed" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_myReview_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_egmt_review_rating_3_pressed" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_myReview_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/multiple_image_select_divider"></LinearLayout>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_myReview_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/multiple_image_select_divider"></LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="0dp"
            android:id="@+id/myReivew_img_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.v7.widget.CardView>

